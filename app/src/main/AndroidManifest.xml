<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trinova.contactgrid" >

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher_main"
        android:allowBackup="false"
        android:theme="@android:style/Theme.Holo">
        <activity
            android:name=".ContactGrid"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ContactGridPreferences" />
        <activity android:name="GroupList" />
        <activity android:name="GroupActions" />

    </application>

</manifest> 
