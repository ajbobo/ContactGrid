<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="25px"
    android:paddingRight="25px">

    <TextView
        android:text="@string/lblAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtAboutLabel"
        android:textAlignment="viewStart"
        android:textStyle="normal|bold"
        android:textSize="24sp" />

    <TextView
        android:text="@string/lblAboutText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtAboutText" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="41dp" />

    <TextView
        android:text="@string/lblPrivacyPolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPrivacyLAbel"
        android:textStyle="normal|bold"
        android:textSize="24sp" />

    <TextView
        android:text="@string/lblPrivacyPolicyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPrivacyText" />

</LinearLayout>
